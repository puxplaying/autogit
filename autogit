        if [ "$failedbuild" == "1" ]; then
            printf '%s\n' "$p"-["$GITHUBBINARY"] | tee -a "$DIR/packages/failed.txt" &>/dev/null    # Failed to build packages
            failedbuild=0
        fi
    done <$GITHUBSOURCECUSTOM #< $GITHUBSOURCE1
}
